---
import BaseLayout from '../layouts/BaseLayout.astro';
import MasonryGrid from '../components/MasonryGrid.astro';
import Footer from '../components/Footer.astro';

const koncertyImages = Array.from({ length: 30 }, (_, i) => 
  `https://picsum.photos/800/${Math.random() > 0.5 ? '1000' : '600'}?random=${100 + i}`
);
---

<BaseLayout title="Koncerty - Aleks Fijał">
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-dark-bg">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="inline-block px-4 py-2 bg-neon-purple/10 border border-neon-purple/30 rounded-md mb-6">
        <span class="text-sm font-mono text-neon-purple uppercase tracking-widest">Portfolio</span>
      </div>
      
      <h1 class="text-6xl lg:text-8xl font-heading font-bold mb-6">
        <span class="text-white">Kon</span><span class="text-neon-purple text-glow-purple">certy</span>
      </h1>
      
      <p class="text-xl text-gray-400 max-w-3xl font-mono">
        Od małych klubów po wielkie stadiony – energia sceny, pot na czole artystów i emocje w każdym kadrze.
      </p>
    </div>
  </section>
  
  <!-- Gallery -->
  <section class="py-20 bg-gradient-to-b from-dark-bg/50 to-dark-bg">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <MasonryGrid images={koncertyImages} columns={4} />
    </div>
  </section>
  
  <Footer />
</BaseLayout>