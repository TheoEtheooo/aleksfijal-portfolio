---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroGallery from '../components/Hero.astro';
import Stats from '../components/Stats.astro';
import CategoryCards from '../components/CategoryCards.astro';
import MasonryGrid from '../components/MasonryGrid.astro';
import AboutSection from '../components/AboutSection.astro';
import Footer from '../components/Footer.astro';
import ArtistSection from '../components/ArtistSection.astro';
import FestivalGrid from '../components/FestivalGrid.astro';


// Kategorie portfolio
const categories = [
  {
    title: 'Koncerty',
    subtitle: 'Energia sceny i emocje występów',
    image: 'https://picsum.photos/600/800?random=10',
    href: '/koncerty',
    color: 'purple' as const,
  },
  {
    title: 'Eventy',
    subtitle: 'Reportaże z wydarzeń branżowych',
    image: 'https://picsum.photos/600/800?random=11',
    href: '/eventy',
    color: 'cyan' as const,
  },
  {
    title: 'Portrety',
    subtitle: 'Elegancja i wysoki szyk',
    image: 'https://picsum.photos/600/800?random=12',
    href: '/portrety',
    color: 'yellow' as const,
  },
  {
    title: 'Analog',
    subtitle: 'Czarno-białe fotografie analogowe',
    image: 'https://picsum.photos/600/800?random=13',
    href: '/analog',
    color: 'purple' as const,
  },
];

// Masonry grid images (20 zdjęć mieszanych)
const masonryImages = Array.from({ length: 20 }, (_, i) => 
  `https://picsum.photos/800/${Math.random() > 0.5 ? '1000' : '600'}?random=${20 + i}`
);
---

<BaseLayout title="Aleks Fijał - Fotografia Koncertowa, Eventowa, Portretowa">
  <!-- Hero Section -->
  <HeroGallery />

  <ArtistSection />
  
  <FestivalGrid />
  
  <!-- Stats Section -->
  <Stats />
  
  <!-- Category Cards -->
  <CategoryCards categories={categories} />
  
  <!-- Main Portfolio Grid -->
  <section id="portfolio" class="py-32 bg-gradient-to-b from-dark-bg to-dark-bg/50">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-20">
        <div class="inline-block px-4 py-2 bg-neon-cyan/10 border border-neon-cyan/30 rounded-md mb-6">
          <span class="text-sm font-mono text-neon-cyan uppercase tracking-widest">Najnowsze prace</span>
        </div>
        <h2 class="text-5xl lg:text-7xl font-heading font-bold">
          <span class="text-white">Wybrane</span> <span class="text-neon-purple text-glow-purple">Zdjęcia</span>
        </h2>
      </div>
      
      <MasonryGrid images={masonryImages} columns={4} />
      
      <div class="text-center mt-16">
        <a 
          href="#portfolio" 
          class="inline-block px-10 py-4 bg-transparent border-2 border-neon-purple text-neon-purple font-heading font-bold uppercase tracking-widest rounded-md hover:bg-neon-purple/10 hover:border-glow-purple transition-all duration-300"
        >
          Zobacz więcej
        </a>
      </div>
    </div>
  </section>
  
  <!-- About Section -->
  <AboutSection />
  
  <!-- Contact CTA -->
  <section id="kontakt" class="py-32 bg-dark-bg">
    <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center">
      <h2 class="text-5xl lg:text-7xl font-heading font-bold mb-8">
        <span class="text-white">Skontaktuj</span> <span class="text-neon-cyan text-glow-cyan">się</span>
      </h2>
      <p class="text-xl text-gray-400 mb-12 font-mono">
        Chcesz porozmawiać o współpracy? Napisz do mnie!
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="mailto:kontakt@aleksfijal.com" 
          class="px-10 py-4 bg-neon-purple text-white font-heading font-bold uppercase tracking-widest rounded-md hover:bg-neon-purple/80 hover:border-glow-purple transition-all duration-300"
        >
          Wyślij Email
        </a>
        <a 
          href="https://instagram.com" 
          target="_blank"
          class="px-10 py-4 bg-transparent border-2 border-neon-cyan text-neon-cyan font-heading font-bold uppercase tracking-widest rounded-md hover:bg-neon-cyan/10 hover:border-glow-cyan transition-all duration-300"
        >
          Instagram
        </a>
      </div>
    </div>
  </section>
  
  <!-- Footer -->
  <Footer />
</BaseLayout>