---
// src/components/FestivalGrid.astro
interface Festival {
  name: string;
  description: string;
  image: string;
  logo?: string;
  href: string;
}

const festivals: Festival[] = [
  {
    name: 'Salt Wave Festival',
    description: 'To festiwal, który celebruje muzykę, estetykę i spokój – w duchu nowoczesnej elegancji i chilloutu nad Zatoką.',
    image: 'https://picsum.photos/1920/1280?random=20',
    href: '/festiwale/salt-wave',
  },
  {
    name: 'Orange Warsaw Festival',
    description: 'Eksplozja barw i rytmów, która rozpala warszawską noc pod scenami pełnymi światowej klasy gwiazd.',
    image: 'https://picsum.photos/1920/1280?random=21',
    href: '/festiwale/orange-warsaw',
  },
  {
    name: 'Open\'er Festival',
    description: 'Wybrzeże Gdyni zmienia się w muzyczny wszechświat, gdzie dźwięki mieszają się z zapachem morza i wiatrem.',
    image: 'https://picsum.photos/1920/1280?random=22',
    logo: 'OPEN`ER Festival Orange',
    href: '/festiwale/opener',
  },
  {
    name: 'Jazz Around Festival',
    description: 'Wędrujący festiwal, który przemierza Polskę z jazzowymi dźwiękami, odkrywając nowe miejsca i łącząc tradycję z nowoczesnością.',
    image: 'https://picsum.photos/1920/1280?random=23',
    href: '/festiwale/jazz-around',
  },
  {
    name: 'BNP Paribas Warsaw SerialCon',
    description: 'Serialowa rewolucja w sercu Warszawy, gdzie najlepsze polskie produkcje spotykają się z międzynarodową publicznością.',
    image: 'https://picsum.photos/1920/1280?random=24',
    href: '/festiwale/serial-con',
  },
];
---

<section class="py-32 bg-gradient-to-b from-dark-bg to-dark-card">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <!-- Carousel/Slider - Horizontal Scroll -->
    <div class="overflow-x-auto scrollbar-hide pb-8 mb-20">
      <div class="flex gap-6" style="width: max-content;">
        {festivals.map((festival) => (
          <a 
            href={festival.href}
            class="group relative w-[85vw] md:w-[60vw] lg:w-[45vw] h-[60vh] flex-shrink-0 rounded-2xl overflow-hidden"
          >
            <img 
              src={festival.image} 
              alt={festival.name}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-dark-bg via-dark-bg/50 to-transparent"></div>
            
            {festival.logo && (
              <div class="absolute top-6 left-6 text-xs uppercase tracking-widest text-white/60">
                {festival.logo}
              </div>
            )}
          </a>
        ))}
      </div>
    </div>
    
    <!-- Grid Cards with Descriptions -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {festivals.map((festival) => (
        <div class="group">
          <a href={festival.href} class="block mb-6">
            <div class="aspect-video rounded-xl overflow-hidden mb-4">
              <img 
                src={festival.image} 
                alt={festival.name}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              />
            </div>
          </a>
          
          <h3 class="text-2xl font-heading font-bold mb-3 group-hover:text-accent-cyan transition-colors">
            {festival.name}
          </h3>
          
          <p class="text-gray-400 text-sm leading-relaxed mb-4">
            {festival.description}
          </p>
          
          <a 
            href={festival.href}
            class="inline-flex items-center gap-2 text-accent-cyan text-sm font-bold uppercase tracking-wider hover:gap-4 transition-all"
          >
            O Festivalu
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>