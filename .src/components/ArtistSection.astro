---
// src/components/EventsSection.astro
interface Event {
  title: string;
  image: string;
  href: string;
}

const events: Event[] = [
  {
    title: 'SOBEL - W Związku z Muzyką release party',
    image: 'https://picsum.photos/1620/1080?random=40',
    href: '/eventy/sobel-release',
  },
  {
    title: 'Lights On! Def JAM Polska',
    image: 'https://picsum.photos/1920/1280?random=41',
    href: '/eventy/lights-on',
  },
  {
    title: 'Jann POP-UP Store',
    image: 'https://picsum.photos/1282/1920?random=42',
    href: '/eventy/jann-popup',
  },
  {
    title: 'Jägermeister Łowcy',
    image: 'https://picsum.photos/1920/1282?random=43',
    href: '/eventy/jagermeister',
  },
];
---

<section class="py-32 bg-dark-bg">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <!-- Section Header -->
    <div class="mb-16">
      <div class="inline-flex items-center gap-2 mb-4">
        <div class="w-2 h-2 bg-accent-cyan rounded-full"></div>
        <span class="text-sm uppercase tracking-widest text-gray-400">Zdjęcia z eventów</span>
      </div>
      <h2 class="text-5xl lg:text-7xl font-heading font-bold">
        Eventy
      </h2>
    </div>
    
    <!-- Events Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {events.map((event, index) => (
        <a 
          href={event.href}
          class={`group relative rounded-2xl overflow-hidden ${
            index === 0 ? 'md:col-span-2 h-[60vh]' : 'h-[50vh]'
          }`}
        >
          <img 
            src={event.image} 
            alt={event.title}
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
          />
          
          <div class="absolute inset-0 bg-gradient-to-t from-dark-bg via-dark-bg/40 to-transparent"></div>
          
          <div class="absolute bottom-0 left-0 right-0 p-8">
            <h3 class="text-2xl lg:text-3xl font-heading font-bold group-hover:text-accent-cyan transition-colors">
              {event.title}
            </h3>
            
            <div class="mt-4 inline-flex items-center gap-2 text-accent-cyan text-sm font-bold uppercase tracking-wider opacity-0 group-hover:opacity-100 transition-opacity">
              Zobacz zdjęcia
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>