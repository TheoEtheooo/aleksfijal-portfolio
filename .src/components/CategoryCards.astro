---
interface Category {
  title: string;
  subtitle: string;
  image: string;
  href: string;
  color: 'purple' | 'cyan' | 'yellow';
}

interface Props {
  categories: Category[];
}

const { categories } = Astro.props;

const glowColors = {
  purple: 'group-hover:border-glow-purple',
  cyan: 'group-hover:border-glow-cyan',
  yellow: 'group-hover:shadow-[0_0_20px_rgba(242,255,0,0.6)]',
};

const textColors = {
  purple: 'group-hover:text-neon-purple',
  cyan: 'group-hover:text-neon-cyan',
  yellow: 'group-hover:text-neon-yellow',
};
---

<section class="py-32 bg-dark-bg">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <h2 class="text-5xl lg:text-7xl font-heading font-bold text-center mb-20">
      <span class="text-white">Port</span><span class="text-neon-cyan text-glow-cyan">folio</span>
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {categories.map((category) => (
        <a 
          href={category.href}
          class="group relative h-[500px] overflow-hidden rounded-lg border-2 border-white/5 transition-all duration-500 hover:-translate-y-2"
        >
          <!-- Image -->
          <img 
            src={category.image} 
            alt={category.title}
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700 ease-out"
          />
          
          <!-- Gradient Overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-dark-bg via-dark-bg/60 to-transparent"></div>
          
          <!-- Content -->
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="transform translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
              <h3 class={`text-3xl font-heading font-bold mb-2 ${textColors[category.color]} transition-colors duration-300`}>
                {category.title}
              </h3>
              <p class="text-sm text-gray-400 font-mono opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-100">
                {category.subtitle}
              </p>
            </div>
          </div>
          
          <!-- Border glow -->
          <div class={`absolute inset-0 border-2 border-transparent ${glowColors[category.color]} rounded-lg transition-all duration-500`}></div>
        </a>
      ))}
    </div>
  </div>
</section>