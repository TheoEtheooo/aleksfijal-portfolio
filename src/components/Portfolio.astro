---
import { Image } from 'astro:assets';
// src/components/Work.astro
const currentYear = new Date().getFullYear();
const images = [
    { src: "/images/portfolio/1.jpg", title: "Live Energy", category: "Koncert" },
    { src: "/images/portfolio/2.jpg", title: "Backstage Access", category: "Event" },
    { src: "/images/portfolio/3.jpg", title: "Vibe Check", category: "Portret" },
    { src: "/images/portfolio/4.jpg", title: "Metal Night", category: "Koncert" },
    { src: "/images/portfolio/5.jpg", title: "Street Life", category: "Analog" },
    { src: "/images/portfolio/6.jpg", title: "Stage Fog", category: "Koncert" },
    { src: "/images/portfolio/7.jpg", title: "Crowd", category: "Festiwal" },
    { src: "/images/portfolio/8.jpg", title: "Neon Portraits", category: "Portret" },
];
---

<div class="bg-black relative overflow-hidden">
    <div class="absolute inset-0 bg-[linear-gradient(to_right,rgba(255,255,255,0.08)_1px,transparent_1px),linear-gradient(to_bottom,rgba(255,255,255,0.08)_1px,transparent_1px)] bg-[size:4rem_4rem] pointer-events-none"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,transparent_20%,#000000_95%)] pointer-events-none"></div>

    <section id="portfolio" class="relative z-10 pt-32 pb-20 max-w-[1400px] mx-auto px-6">
        <div class="mb-20">
            <div class="inline-block bg-[#00f0ff] text-black font-mono text-xs font-bold px-2 py-1 mb-4 transform -rotate-1 uppercase">
                Wybrane Prace
            </div>
            <h2 class="font-black text-6xl md:text-8xl text-white mb-6 uppercase tracking-tighter leading-none">
                Portfolio <br/>
                <span class="text-zinc-800 font-outline">2024â€”{currentYear}</span>
            </h2>
        </div>

        <div class="columns-1 sm:columns-2 lg:columns-4 gap-6 space-y-6">
            {images.map((img) => (
                <div class="relative group break-inside-avoid">
                    <div class="relative overflow-hidden rounded-lg border border-white/10 bg-zinc-900 transition-all duration-500 group-hover:border-[#00f0ff]/50">
                        <img 
                            src={img.src} 
                            alt={img.title}
                            class="w-full h-auto grayscale group-hover:grayscale-0 transition-all duration-700 ease-in-out group-hover:scale-105"
                            loading="lazy"
                            decoding="async"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-6">
                            <span class="font-mono text-[10px] text-[#00f0ff] uppercase tracking-widest mb-1">{img.category}</span>
                            <h3 class="text-white font-bold text-lg uppercase tracking-tight">{img.title}</h3>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </section>

    <section id="analog" class="relative z-10 py-32 max-w-[1400px] mx-auto px-6">
        <div class="flex flex-col md:flex-row gap-16 items-center">
            <div class="md:w-1/2">
                <div class="inline-block bg-white text-black font-mono text-xs font-bold px-2 py-1 mb-4 transform -rotate-2 uppercase">
                    35mm & 120mm
                </div>
                <h2 class="font-black text-5xl md:text-7xl text-white mb-6 uppercase tracking-tighter leading-[0.9]">
                    ANALOG <br/><span class="text-zinc-700">IS NOT DEAD</span>
                </h2>
                <p class="font-mono text-sm text-zinc-500 mb-8 max-w-md leading-relaxed">
                    Czyste srebro. Nikon AF i Pentacon Six. Bez retuszu, bez cyfrowego szumu. Tylko ziarno i moment uchwycony na emulsji.
                </p>
                <div class="flex gap-4 font-mono text-[10px] text-zinc-600">
                    <span class="border border-zinc-800 px-4 py-1.5 rounded-full uppercase tracking-widest hover:text-white transition-colors cursor-default">Ilford HP5</span>
                    <span class="border border-zinc-800 px-4 py-1.5 rounded-full uppercase tracking-widest hover:text-white transition-colors cursor-default">Kodak Portra</span>
                </div>
            </div>

            <div class="md:w-1/2 grid grid-cols-2 gap-8">
                <div class="relative group">
                    <Image 
                        src="https://images.unsplash.com/photo-1518331393630-3330df331777?q=80&w=800" 
                        class="relative grayscale hover:grayscale-0 transition-all duration-700 rounded-sm border-[8px] md:border-[12px] border-white shadow-2xl rotate-[-3deg] group-hover:rotate-0" 
                        alt="Analog 1"
                        width={800}
                        height={600}
                    />
                </div>
                <div class="relative group pt-16">
                    <Image 
                        src="https://images.unsplash.com/photo-1542208998-f6dbbb27a72f?q=80&w=800" 
                        class="relative grayscale hover:grayscale-0 transition-all duration-700 rounded-sm border-[8px] md:border-[12px] border-white shadow-2xl rotate-[3deg] group-hover:rotate-0" 
                        alt="Analog 2"
                        width={800}
                        height={600}
                    />
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Archivo+Black&display=swap');
    h2 { font-family: 'Archivo Black', sans-serif; }
    .font-outline { -webkit-text-stroke: 1px #27272a; color: transparent; }
    .font-mono { font-family: 'JetBrains Mono', monospace; }
</style>