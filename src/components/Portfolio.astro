---
import { Image } from 'astro:assets';

const currentYear = new Date().getFullYear();
// Tablica obiektów reprezentująca zdjęcia w galerii (źródło, tytuł, kategoria)
const images = [
    { src: "/images/portfolio/1.jpg", title: "", category: "" },
    { src: "/images/portfolio/2.jpg", title: "", category: "" },
    { src: "/images/portfolio/3.jpg", title: "", category: "" },
    { src: "/images/portfolio/4.jpg", title: "", category: "" },
    { src: "/images/portfolio/5.jpg", title: "", category: "" },
    { src: "/images/portfolio/6.jpg", title: "", category: "" },
    { src: "/images/portfolio/7.jpg", title: "", category: "" },
    { src: "/images/portfolio/8.jpg", title: "", category: "" },
    { src: "/images/portfolio/9.jpg", title: "", category: "" },
    { src: "/images/portfolio/10.jpg", title: "", category: "" },
];
---

<div class="bg-black relative overflow-hidden">
    <div class="absolute top-0 left-0 w-full h-48 bg-gradient-to-b from-black to-transparent z-20 pointer-events-none"></div>
    <div class="absolute inset-0 bg-[linear-gradient(to_right,rgba(255,255,255,0.12)_1px,transparent_1px),linear-gradient(to_bottom,rgba(255,255,255,0.12)_1px,transparent_1px)] bg-[size:4rem_4rem] pointer-events-none"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,transparent_40%,#000000_98%)] pointer-events-none"></div>

    <section id="portfolio" class="relative z-10 pt-32 pb-20 max-w-[1400px] mx-auto px-6">
        <div class="mb-20">
            <h2 class="font-black text-6xl md:text-8xl text-white mb-6 uppercase tracking-tighter leading-none">
                <span class="inline-flex flex-col items-center gap-4">
                    <span class="relative inline-block overflow-hidden bg-black transform -rotate-1">
                        <span class="absolute inset-0">
                            <span class="absolute inset-[-150%] animate-[spin_3s_linear_infinite] bg-[conic-gradient(from_0deg,transparent_0deg,transparent_280deg,#00f0ff_360deg)]"></span>
                        </span>
                        <span class="absolute inset-[3px] bg-black"></span>
                        <span class="relative z-10 inline-block px-4 md:px-6 py-1 md:py-2 text-white">Wybrane Prace</span>
                    </span>
                    <div class="relative inline-block pr-2">
                        <!-- Bottom layer (the gradient outline) -->
                        <span
                            aria-hidden="true"
                            class="absolute inset-0 text-outline-gradient"
                        >
                            2024 — {currentYear}
                        </span>
                        <!-- Top layer (the regular text, masking the center) -->
                        <span class="relative font-outline-mask">
                            2024 — {currentYear}
                        </span>
                    </div>
                </span>
            </h2>
        </div>

        <div class="masonry-grid -mx-3">
            <div class="masonry-sizer w-full sm:w-1/2 lg:w-1/3"></div>
            {images.map((img) => (
                <div class="masonry-item w-full sm:w-1/2 lg:w-1/3 p-3 relative group">
                    <div class="relative overflow-hidden rounded-lg border border-white/10 bg-zinc-900 transition-all duration-500 group-hover:border-[#00f0ff]/50">
                        <Image 
                            src={img.src} 
                            alt={img.title}
                            class="w-full h-auto transition-all duration-700 ease-in-out group-hover:scale-105"
                            width={600}
                            height={800}
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-6">
                            <span class="font-mono text-[10px] text-[#00f0ff] uppercase tracking-widest mb-1">{img.category}</span>
                            <h3 class="text-white font-bold text-lg uppercase tracking-tight">{img.title}</h3>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </section>

    <section id="analog" class="relative z-10 py-32 max-w-[1400px] mx-auto px-6">
        <div class="flex flex-col md:flex-row gap-16 items-center">
            <div class="md:w-1/2">
                <div class="inline-block bg-white text-black font-mono text-xs font-bold px-2 py-1 mb-4 transform -rotate-2 uppercase">
                    35mm & 120mm
                </div>
                <h2 class="font-black text-5xl md:text-7xl text-white mb-6 uppercase tracking-tighter leading-[0.9]">
                    ANALOG <br/><span class="text-zinc-700">IS NOT DEAD</span>
                </h2>
                <p class="font-mono text-sm text-zinc-500 mb-8 max-w-md leading-relaxed">
                    Żadnych wyświetlaczy i natychmiastowych podglądów. Wybieram analog, gdy moment wymaga skupienia i unikalnego klimatu.
                </p>
                <div class="flex gap-4 font-mono text-[10px] text-zinc-600">
                    <span class="border border-zinc-800 px-4 py-1.5 rounded-full uppercase tracking-widest hover:text-white transition-colors cursor-default">Ilford HP5+</span>
                    <span class="border border-zinc-800 px-4 py-1.5 rounded-full uppercase tracking-widest hover:text-white transition-colors cursor-default">Kentmere 400</span>
                </div>
            </div>

            <div class="md:w-1/2 grid grid-cols-2 gap-8">
                <div class="relative group">
                    <Image 
                        src="https://images.unsplash.com/photo-1518331393630-3330df331777?q=80&w=800" 
                        class="relative transition-all duration-700 rounded-sm border-[8px] md:border-[12px] border-white shadow-2xl rotate-[-3deg] group-hover:rotate-0" 
                        alt="Analog 1"
                        width={800}
                        height={600}
                    />
                </div>
                <div class="relative group pt-16">
                    <Image 
                        src="https://images.unsplash.com/photo-1542208998-f6dbbb27a72f?q=80&w=800" 
                        class="relative transition-all duration-700 rounded-sm border-[8px] md:border-[12px] border-white shadow-2xl rotate-[3deg] group-hover:rotate-0" 
                        alt="Analog 2"
                        width={800}
                        height={600}
                    />
                </div>
            </div>
        </div>

        <div class="mt-24 grid grid-cols-2 md:grid-cols-4 gap-8 items-start">
            <div class="relative group md:pt-8">
                <Image 
                    src="https://images.unsplash.com/photo-1502945015378-d24de35e5b7c?q=80&w=800" 
                    class="relative transition-all duration-700 rounded-sm border-[8px] md:border-[12px] border-white shadow-2xl rotate-[2deg] group-hover:rotate-0" 
                    alt="Analog 3"
                    width={800}
                    height={600}
                />
            </div>
            <div class="relative group">
                <Image 
                    src="https://images.unsplash.com/photo-1516883344328-85c4a3b9b4a1?q=80&w=800" 
                    class="relative transition-all duration-700 rounded-sm border-[8px] md:border-[12px] border-white shadow-2xl rotate-[-4deg] group-hover:rotate-0" 
                    alt="Analog 4"
                    width={800}
                    height={600}
                />
            </div>
            <div class="relative group md:pt-12">
                <Image 
                    src="https://images.unsplash.com/photo-1519692458399-65e795a645a2?q=80&w=800" 
                    class="relative transition-all duration-700 rounded-sm border-[8px] md:border-[12px] border-white shadow-2xl rotate-[5deg] group-hover:rotate-0" 
                    alt="Analog 5"
                    width={800}
                    height={600}
                />
            </div>
            <div class="relative group md:pt-4">
                <Image 
                    src="https://images.unsplash.com/photo-1505144808419-1957a94ca61e?q=80&w=800" 
                    class="relative transition-all duration-700 rounded-sm border-[8px] md:border-[12px] border-white shadow-2xl rotate-[-2deg] group-hover:rotate-0" 
                    alt="Analog 6"
                    width={800}
                    height={600}
                />
            </div>
        </div>
    </section>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Archivo+Black&display=swap');
    h2 { font-family: 'Archivo Black', sans-serif; }
    .font-outline { -webkit-text-stroke: 1px #27272a; color: transparent; }
    .font-mono { font-family: 'JetBrains Mono', monospace; }

    .text-outline-gradient {
        -webkit-text-stroke: 3px transparent;
        background: linear-gradient(to right, #00f0ff, #9f50ff, #00f0ff);
        background-size: 200% auto;
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        animation: slide 3s linear infinite;
    }

    .font-outline-mask {
        color: black;
    }

    @keyframes slide {
        to {
            background-position: -200% center;
        }
    }
</style>

<script>
    import Masonry from 'masonry-layout';
    import imagesLoaded from 'imagesloaded';

    const grid = document.querySelector('.masonry-grid');
    if (grid) {
        // Inicjalizacja układu Masonry po załadowaniu wszystkich obrazów
        imagesLoaded(grid, () => {
            new Masonry(grid, {
                itemSelector: '.masonry-item',
                columnWidth: '.masonry-sizer',
                percentPosition: true
            });
        });
    }
</script>