---
// Konfiguracja slajdów dla karuzeli (osobne obrazy dla desktop/mobile)
const slides = [
    {
        desktop: "/images/hero/hero-1-desktop.jpg",
        mobile: "/images/hero/hero-1-mobile.jpg", 
        alt: "Hero 1"
    },
    {
        desktop: "/images/hero/hero-2-desktop.jpg",
        mobile: "/images/hero/hero-2-mobile.jpg",
        alt: "Hero 2"
    },
    {
        desktop: "/images/hero/hero-3-desktop.jpg",
        mobile: "/images/hero/hero-3-mobile.jpg",
        alt: "Hero 3"
    },
];

// Aktualny rok używany w elementach dekoracyjnych (np. "EST. 2024 / ...")
const currentYear = new Date().getFullYear();
---

<section class="relative h-screen w-full overflow-hidden bg-black">
    
    <div class="absolute inset-0 z-20 flex flex-col justify-end md:justify-center pb-24 md:pb-0 px-6 md:px-20 pointer-events-none">
        <div class="w-full max-w-4xl animate-fade-in"> 
            
            <div class="flex items-center gap-3 mb-6">
                <span class="w-2 h-2 rounded-full bg-[#00f0ff] animate-pulse"></span>
                <span class="font-mono text-[10px] uppercase tracking-[0.4em] text-[#00f0ff]">DOKUMENTACJA EMOCJI</span>
            </div>

            <h1 class="font-black text-4xl md:text-7xl lg:text-[7rem] text-white uppercase leading-[0.8] tracking-[-0.05em] mb-10 pointer-events-auto">
                Twój Moment, <br />
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#00f0ff] via-[#00f0ff] to-[#f2ff00]">Mój Kadr</span>
            </h1>

            <div class="max-w-md mb-12 pointer-events-auto">
                <p class="font-mono text-zinc-300 text-[10px] md:text-xs leading-relaxed tracking-tight border-l-2 border-[#00f0ff] pl-4">
                    <span class="text-white font-bold uppercase block mb-1">KONCERTY / EVENTY / PORTRETY</span>
                    Fotografia koncertowa i eventowa robiona z samego środka akcji. Szukam autentyczności tam, gdzie inni widzą tylko chaos. Bez reżyserii, za to z charakterem.
                </p>
            </div>

            <div class="flex flex-wrap justify-center md:justify-start gap-6 pointer-events-auto">
                <div class="relative group">
                    <button id="contact-trigger" class="relative inline-flex items-center justify-center px-10 py-4 overflow-hidden rounded-full bg-black transition-transform active:scale-95 cursor-pointer">
                        <span class="absolute inset-0">
                            <span class="absolute inset-[-150%] animate-[spin_3s_linear_infinite] bg-[conic-gradient(from_0deg,transparent_0deg,transparent_280deg,#00f0ff_360deg)] group-hover:bg-[conic-gradient(from_0deg,transparent_0deg,transparent_180deg,#f2ff00_360deg)]"></span>
                        </span>
                        <span class="absolute inset-[2px] bg-[#0a0a0a] rounded-full group-hover:bg-zinc-900 transition-colors duration-300"></span>
                        <span class="relative z-10 font-mono text-[11px] font-black uppercase tracking-widest text-white group-hover:text-[#00f0ff]">
                            Współpraca
                        </span>
                    </button>
                </div>

                <a href="#aboutme" class="group relative px-10 py-4 flex items-center justify-center rounded-full border border-white/10 hover:border-[#00f0ff] transition-all duration-500 overflow-hidden">
                    <span class="relative z-10 font-mono text-[11px] font-black uppercase text-white group-hover:text-[#00f0ff] tracking-widest">
                        O mnie
                    </span>
                    <div class="absolute inset-0 bg-[#00f0ff]/5 opacity-0 group-hover:opacity-100 transition-opacity"></div>
                </a>
            </div>
        </div>
    </div>

    <div id="hero-slider" class="absolute inset-0 z-0">
        {slides.map((slide, index) => (
            <div class={`hero-slide absolute inset-0 transition-opacity duration-1000 ${index === 0 ? 'opacity-100' : 'opacity-0'}`} data-index={index}>
                <picture>
                    <source media="(max-width: 767px)" srcset={slide.mobile} />
                    <source media="(min-width: 768px)" srcset={slide.desktop} />
                    <img 
                        src={slide.desktop} 
                        alt={slide.alt} 
                        class="w-full h-full object-cover" 
                        loading={index === 0 ? "eager" : "lazy"}
                        fetchpriority={index === 0 ? "high" : "auto"}
                    />
                </picture>
                
                <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent md:bg-[linear-gradient(to_right,rgba(0,0,0,0.7)_0%,transparent_10%)]"></div>
            </div>
        ))}
    </div>

    <!-- Transition Grid -->
    <div class="absolute bottom-0 left-0 w-full h-[5%] z-[5] bg-[linear-gradient(to_right,rgba(255,255,255,0.1)_1px,transparent_1px),linear-gradient(to_bottom,rgba(255,255,255,0.1)_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:linear-gradient(to_top,black,transparent)]"></div>

    <!-- Black Gradient & Blur -->
    <div class="absolute bottom-0 left-0 w-full h-[10%] bg-gradient-to-t from-black to-transparent backdrop-blur-sm z-10 [mask-image:linear-gradient(to_top,black,transparent)]"></div>

    <div class="absolute bottom-10 right-12 z-30 hidden md:block pointer-events-none">
        <span class="text-white/30 font-mono text-[10px] uppercase tracking-[0.3em] italic">
            EST. 2024 / {currentYear}
        </span>
    </div>

    <div class="absolute bottom-5 md:bottom-10 left-1/2 -translate-x-1/2 z-30 flex flex-col items-center group">
        <span class="text-white font-mono text-[11px] uppercase tracking-widest mb-2 drop-shadow-[0_0_5px_rgba(0,240,255,0.8)] animate-pulse">
            Scroll Down
        </span>
        <div class="relative h-10 w-[1px] bg-white/20 overflow-hidden">
            <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-[#00f0ff] to-transparent animate-scroll-fast"></div>
        </div>
    </div>

    <!-- Contact Modal -->
    <div id="contact-modal" class="fixed inset-0 z-[100] flex items-center justify-center px-4 opacity-0 pointer-events-none transition-all duration-500">
        <!-- Backdrop -->
        <div id="contact-backdrop" class="absolute inset-0 bg-black/80 backdrop-blur-md transition-opacity duration-500"></div>
        
        <!-- Modal Content -->
        <div class="relative z-10 w-full max-w-2xl bg-[#0a0a0a] border border-white/10 p-8 md:p-12 rounded-2xl shadow-2xl transform scale-95 transition-all duration-500">
            <button id="contact-close" class="absolute top-6 right-6 text-zinc-500 hover:text-[#00f0ff] transition-colors font-mono text-xs tracking-widest">
                [ ZAMKNIJ ]
            </button>

            <h2 class="font-black text-3xl md:text-4xl text-white mb-2 uppercase tracking-tighter">Współpraca</h2>
            <p class="font-mono text-xs text-zinc-400 mb-8 uppercase tracking-widest">Opowiedz mi o swoim projekcie</p>

            <form action="https://formsubmit.co/aleksanderfijal.fotografia@gmail.com" method="POST" class="flex flex-col gap-6">
                <!-- Konfiguracja FormSubmit -->
                <input type="hidden" name="_subject" value="Nowe zgłoszenie ze strony!">
                <input type="hidden" name="_captcha" value="false">
                <input type="text" name="_honey" style="display:none">

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="flex flex-col gap-2">
                        <label for="name" class="font-mono text-[10px] uppercase tracking-widest text-[#00f0ff]">Imię i Nazwisko</label>
                        <input type="text" name="name" id="name" required class="bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-white font-mono text-sm focus:outline-none focus:border-[#00f0ff] transition-colors" placeholder="Jan Kowalski">
                    </div>
                    <div class="flex flex-col gap-2">
                        <label for="email" class="font-mono text-[10px] uppercase tracking-widest text-[#00f0ff]">Email</label>
                        <input type="email" name="email" id="email" required class="bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-white font-mono text-sm focus:outline-none focus:border-[#00f0ff] transition-colors" placeholder="jan@example.com">
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="flex flex-col gap-2">
                        <label for="phone" class="font-mono text-[10px] uppercase tracking-widest text-[#00f0ff]">Telefon</label>
                        <input type="tel" name="phone" id="phone" class="bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-white font-mono text-sm focus:outline-none focus:border-[#00f0ff] transition-colors" placeholder="+48 000 000 000">
                    </div>
                    <div class="flex flex-col gap-2">
                        <label for="type" class="font-mono text-[10px] uppercase tracking-widest text-[#00f0ff]">Rodzaj Sesji</label>
                        <select name="type" id="type" class="bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-white font-mono text-sm focus:outline-none focus:border-[#00f0ff] transition-colors appearance-none">
                            <option value="koncert" class="bg-black">Koncert</option>
                            <option value="event" class="bg-black">Event</option>
                            <option value="portret" class="bg-black">Portret</option>
                            <option value="analog" class="bg-black">Analog</option>
                            <option value="inne" class="bg-black">Inne</option>
                        </select>
                    </div>
                </div>

                <div class="flex flex-col gap-2">
                    <label for="message" class="font-mono text-[10px] uppercase tracking-widest text-[#00f0ff]">Wiadomość</label>
                    <textarea name="message" id="message" rows="4" required class="bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-white font-mono text-sm focus:outline-none focus:border-[#00f0ff] transition-colors resize-none" placeholder="Szczegóły projektu..."></textarea>
                </div>

                <button type="submit" class="group relative inline-flex items-center justify-center px-8 py-4 overflow-hidden rounded-lg bg-[#00f0ff] text-black font-black uppercase tracking-widest hover:bg-white transition-colors duration-300 mt-2">
                    Wyślij Zgłoszenie
                </button>
            </form>
        </div>
    </div>
</section>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Archivo+Black&family=JetBrains+Mono:wght@400;800&display=swap');

    h1 { font-family: 'Archivo Black', sans-serif; }
    .font-mono { font-family: 'JetBrains Mono', monospace; }

    .animate-fade-in {
        animation: fadeIn 1.5s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateX(-40px); }
        to { opacity: 1; transform: translateX(0); }
    }

    @keyframes scroll-fast {
        0% { transform: translateY(-100%); }
        100% { transform: translateY(100%); }
    }

    .animate-scroll-fast {
        animation: scroll-fast 2s linear infinite;
    }
</style>

<script>
    const slides = document.querySelectorAll('.hero-slide');
    let current = 0;
    // Logika slidera: cykliczne przełączanie slajdów co 5 sekund
    if (slides.length > 1) {
        setInterval(() => {
            // Ukryj obecny slajd
            slides[current].classList.replace('opacity-100', 'opacity-0');
            // Oblicz indeks następnego slajdu
            current = (current + 1) % slides.length;
            // Pokaż następny slajd
            slides[current].classList.replace('opacity-0', 'opacity-100');
        }, 5000);
    }

    // Logika modala kontaktowego
    const contactTrigger = document.getElementById('contact-trigger');
    const contactModal = document.getElementById('contact-modal');
    const contactBackdrop = document.getElementById('contact-backdrop');
    const contactClose = document.getElementById('contact-close');
    const modalContent = contactModal?.querySelector('div.relative');

    // Funkcja otwierająca modal
    function openContact() {
        if (!contactModal || !modalContent) return;
        // Pokaż modal i włącz interakcje
        contactModal.classList.remove('opacity-0', 'pointer-events-none');
        // Animacja skalowania treści
        modalContent.classList.remove('scale-95');
        modalContent.classList.add('scale-100');
        // Zablokuj scrollowanie strony
        document.body.style.overflow = 'hidden';
    }

    // Funkcja zamykająca modal
    function closeContact() {
        if (!contactModal || !modalContent) return;
        // Ukryj modal
        contactModal.classList.add('opacity-0', 'pointer-events-none');
        // Reset animacji skalowania
        modalContent.classList.add('scale-95');
        modalContent.classList.remove('scale-100');
        // Przywróć scrollowanie strony
        document.body.style.overflow = '';
    }

    // Podpięcie zdarzeń kliknięcia
    contactTrigger?.addEventListener('click', openContact);
    contactClose?.addEventListener('click', closeContact);
    contactBackdrop?.addEventListener('click', closeContact);
</script>