---
// src/layouts/Layout.astro
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pl" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Aleks Fijał - Fotografia Koncertowa i Eventowa" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=JetBrains+Mono:wght@400;700&family=Space+Grotesk:wght@500;700;900&display=swap" rel="stylesheet">
        
		<title>{title}</title>
	</head>
	<body class="bg-[#0a0a0a] text-gray-200 font-inter overflow-x-hidden selection:bg-[#7000ff] selection:text-white">
		<slot />

		<!-- Lightbox Modal -->
		<div id="lightbox-modal" class="fixed inset-0 bg-black/90 backdrop-blur-sm flex items-center justify-center p-4 sm:p-8 z-[200] opacity-0 pointer-events-none transition-opacity duration-300" role="dialog" aria-modal="true">
			<img id="lightbox-image" src="" alt="Powiększone zdjęcie" class="max-w-full max-h-full object-contain shadow-2xl rounded-lg" />
			<button id="lightbox-close" class="absolute top-4 right-4 sm:top-6 sm:right-6 text-white text-5xl font-light leading-none hover:text-zinc-400 transition-colors" aria-label="Zamknij powiększenie">&times;</button>
		</div>
	</body>
</html>

<style is:global>
    /* Definicja kolorów z briefu */
    :root {
        --neon-purple: #7000ff;
        --neon-cyan: #00f0ff;
        --neon-yellow: #f2ff00;
        --deep-black: #0a0a0a;
    }

    /* Typografia */
    .font-grotesk { font-family: 'Space Grotesk', sans-serif; }
    .font-inter { font-family: 'Inter', sans-serif; }
    .font-mono { font-family: 'JetBrains Mono', monospace; }

    /* Ukrywanie paska przewijania dla czystego looku (opcjonalne) */
    ::-webkit-scrollbar {
        width: 8px;
    }
    ::-webkit-scrollbar-track {
        background: #0a0a0a; 
    }
    ::-webkit-scrollbar-thumb {
        background: #333; 
        border-radius: 4px;
    }
    ::-webkit-scrollbar-thumb:hover {
        background: var(--neon-purple); 
    }
</style>

<script is:inline>
	const modal = document.getElementById('lightbox-modal');
	const modalImage = document.getElementById('lightbox-image');
	const closeModalBtn = document.getElementById('lightbox-close');

	function openModal(src) {
		if (!modal || !modalImage) return;
		modalImage.src = src;
		modal.classList.remove('opacity-0', 'pointer-events-none');
		document.body.style.overflow = 'hidden'; // Prevent background scrolling
	}

	function closeModal() {
		if (!modal) return;
		modal.classList.add('opacity-0', 'pointer-events-none');
		document.body.style.overflow = ''; // Restore scrolling
	}

	// Open modal
	document.addEventListener('click', function (e) {
		const trigger = e.target.closest('.lightbox-trigger');
		if (trigger) {
			e.preventDefault();
			openModal(trigger.href);
		}
	});

	// Close modal actions
	closeModalBtn?.addEventListener('click', closeModal);
	modal?.addEventListener('click', (e) => {
		if (e.target === modal) closeModal();
	});
	document.addEventListener('keydown', (e) => {
		if (e.key === 'Escape' && !modal.classList.contains('pointer-events-none')) closeModal();
	});
</script>